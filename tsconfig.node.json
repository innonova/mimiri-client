{
	"extends": "@tsconfig/node18/tsconfig.json",
	"include": [
		"vite.config.*",
		"vitest.config.*",
		"cypress.config.*",
		"nightwatch.conf.*",
		"playwright.config.*",
		"playwright.*.config.*",
		"playwright/**/*",
		"eslint.config.js"
	],
	"compilerOptions": {
		"composite": true,
		"noEmit": true,
		"allowJs": true,
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"types": ["node"]
	}
}
